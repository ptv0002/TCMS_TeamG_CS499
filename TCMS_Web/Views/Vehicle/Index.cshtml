@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Vehicle Page";
}
<p>
    <a asp-action="Add"> Add </a>
</p>
@model GroupStatusViewModel<Models.Vehicle>
<form asp-action="Index">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col">
        <label class="mr-1 text-gray-800">Show</label>
        <select asp-for="StatusViewModel.SelectedValue" class="mr-1" asp-items="ViewBag.statusModel"></select>
        <label class="mr-3 text-gray-800">records</label>
        <input type="submit" formmethod="post" class="btn btn-primary" value="Update" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Id
            </th>
            <th>
                Brand
            </th>
            <th>
                Year
            </th>
            <th>
                Model
            </th>
            <th>
                Type
            </th>
            <th>
                Ready Status
            </th>
            <th>
                Status
            </th>
            <th>
                LastMaintenance Date
            </th>
            <th>
                MaintenanceCycle
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ClassModel)
        {
            string status;
            @if (item.Status == true) status = "Active";
            else if (item.Status == false) status = "Inactive";
            else status = "Null";
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Brand
                </td>
                <td>
                    @item.Year
                </td>
                <td>
                    @item.Model
                </td>
                <td>
                    @item.Type
                </td>
                <td>
                    @item.ReadyStatus
                </td>
                <td>
                    @status
                </td>
                <td>
                    @item.LastMaintenanceDate
                </td>
                <td>
                    @item.MaintenanceCycle
                </td>
            </tr>
        }
    </tbody>
</table>
