@model Models.MaintenanceDetail

@{
    ViewData["Title"] = "Edit Maintenance Detail";
    ViewBag.MActive = "active";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MaintenanceInfoId" />
            <div class="form-group">
                <label asp-for="Service" class="control-label font-weight-bold"></label>
                <input asp-for="Service" class="form-control" required />
                <span asp-validation-for="Service" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimateCost" class="control-label font-weight-bold"></label>
                <input asp-for="EstimateCost" class="form-control" required/>
                <span asp-validation-for="EstimateCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label font-weight-bold"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label font-weight-bold"></label>
                <div>
                    @Html.DropDownList("Status", new List<SelectListItem>{
                       new SelectListItem{ Text="Active", Value = "true" },
                       new SelectListItem{ Text="Inactive", Value = "false" }}, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Maintenance" asp-action="Details" asp-route-id=@Model.MaintenanceInfoId> Back to Details</a>
</div>

