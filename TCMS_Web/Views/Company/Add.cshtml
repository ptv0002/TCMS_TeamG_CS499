@model Models.Company

@{
    ViewData["Title"] = "Add Company";
}
<hr />
<form asp-action="Add">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label font-weight-bold"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label font-weight-bold"></label>
        <div>
            @Html.DropDownList("Status", new List<SelectListItem>{
               new SelectListItem{ Text="Active", Value = "true" },
               new SelectListItem{ Text="Inactive", Value = "false" }}, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label font-weight-bold"></label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            <label asp-for="City" class="control-label font-weight-bold"></label>
            <input asp-for="City" class="form-control" required />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="State" class="control-label font-weight-bold"></label>
            <input asp-for="State" class="form-control" required />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="Zip" class="control-label font-weight-bold"></label>
            <input asp-for="Zip" class="form-control" required />
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ContactPerson" class="control-label font-weight-bold"></label>
        <input asp-for="ContactPerson" class="form-control" required />
        <span asp-validation-for="ContactPerson" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>