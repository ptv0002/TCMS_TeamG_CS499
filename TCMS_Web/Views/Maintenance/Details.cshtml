@model TCMS_Web.Models.MaintenanceViewModel

@{
    ViewData["Title"] = "Maintenance Details";
    string status;
    if (Model.Status == true) status = "Active";
    else if (Model.Status == false) status = "Inactive";
    else status = "Null";
    ViewBag.MActive = "active";
}
<div>
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" href="#first" aria-controls="first" role="tab" data-toggle="tab">Basic Info</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#second" aria-controls="second" role="tab" data-toggle="tab">Detailed Info</a>
        </li>
    </ul>
</div>

<div class="tab-content mt-3">

    <div role="tabpanel" class="tab-pane active" id="first">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Employee ID")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EmployeeID)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("First Name")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Last Name")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Phone Number")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Vehicle ID")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.VehicleID)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Brand")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Brand)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Model")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Type")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Maintenance Date")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DateTime)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Notes")
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Notes)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayName("Status")
            </dt>
            <dd class="col-sm-9">
                @status
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="second">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Service 
                    </th>
                    <th>
                        Estimated Cost 
                    </th>
                    <th>
                        Notes
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MaintenanceDetails)
                {
                    string dStatus;
                    if (item.Status == true) dStatus = "Active";
                    else if (item.Status == false) dStatus = "Inactive";
                    else dStatus = "Null";
                    <tr>
                        <td>
                            @item.Service
                        </td>
                        <td>
                            $@item.EstimateCost
                        </td>
                        <td>
                            @item.Notes
                        </td>
                        <td>
                            @dStatus
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
