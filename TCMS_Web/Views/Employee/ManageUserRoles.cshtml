@{
    ViewData["Title"] = "Manage User Roles";
    var userId = ViewBag.userId;
    ViewBag.EActive = "active";
    bool a1, a2, a3;
    bool a4 = false;
    a1 = (Model.RoleName == "Full Access");
    a2 = (Model.RoleName == "Shipping");
    a3 = (Model.RoleName == "Maintenance");
    if (!a1 && !a2 && !a3) a4 = true; 
}
@model UserRolesViewModel
<hr />
<form asp-action="ManageUserRoles">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="@userId" class="form-control" type="hidden" />
    <div class="form-group">
        <label class="col">• Full Access - Employee, Maintenance, Shipping and Equipment Data</label>
        <label class="col">• Shipping - Maintenance, Shipping and Equipment Data</label>
        <label class="col">• Maintenance - Maintenance and Equipment Data</label>
        <label class="col">• Driver - Shipping Data specific to Driver's Employee ID</label>
    </div>
    <div class="form-group">
        <div class="col">
            @Html.RadioButton("RoleName", "Full Access", a1)
            <label>Full Access</label>
        </div>
        <div class="col">
            @Html.RadioButton("RoleName", "Shipping", a2)
            <label>Shipping</label>
        </div>
        <div class="col">
            @Html.RadioButton("RoleName", "Maintenance", a3)
            <label>Maintenance</label>
        </div>
        <div class="col">
            @Html.RadioButton("RoleName", "Driver", a4)
            <label>Driver</label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" formmethod="post" class="btn btn-primary" value="Save" />
    </div>

</form>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@userId">Back to Edit Employee</a>
</div>