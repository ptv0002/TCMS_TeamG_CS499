@{
    ViewData["Title"] = "Edit Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Models.Employee
<hr />
<div class="card">
    <div class="card-header">
        <h4 class="mt-2">User Roles</h4>
    </div>
    <div class="card-body">
        @ViewBag.UserRoles
    </div>
    <div class="card-footer">
        <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-primary">
            Manage Roles
        </a>
    </div>
</div>
<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            <label asp-for="FirstName" class="control-label font-weight-bold"></label>
            <input asp-for="FirstName" class="form-control" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="MiddleName" class="control-label font-weight-bold"></label>
            <input asp-for="MiddleName" class="form-control" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="LastName" class="control-label font-weight-bold"></label>
            <input asp-for="LastName" class="form-control" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0 col">
            <div class="control-label font-weight-bold">
                <label>Employee ID</label>
                <input asp-for="Id" type="hidden" />
            </div>
            <div>
                @Html.DisplayFor(model => model.Id)
            </div>
        </div>
        <div class="col-sm-6 col">
            <div class="control-label font-weight-bold">
                @Html.DisplayNameFor(model => model.Email)
                <input asp-for="Email" type="hidden" />
            </div>
            <div>
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label asp-for="Position" class="control-label font-weight-bold"></label>
            <input asp-for="Position" class="form-control" required />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="Status" class="control-label font-weight-bold"></label>
            <div>
                @Html.DropDownList("Status", new List<SelectListItem>{
                   new SelectListItem{ Text="Active", Value = "true" },
                   new SelectListItem{ Text="Inactive", Value = "false" }}, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label font-weight-bold"></label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-4 mb-3 mb-sm-0">
            <label asp-for="City" class="control-label font-weight-bold"></label>
            <input asp-for="City" class="form-control" required />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="State" class="control-label font-weight-bold"></label>
            <input asp-for="State" class="form-control" required />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="Zip" class="control-label font-weight-bold"></label>
            <input asp-for="Zip" class="form-control" required />
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label class="control-label font-weight-bold">Cell Phone</label>
            <input asp-for="PhoneNumber" class="form-control" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="HomePhoneNum" class="control-label font-weight-bold"></label>
            <input asp-for="HomePhoneNum" class="form-control" />
            <span asp-validation-for="HomePhoneNum" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <label asp-for="PayRate" class="control-label font-weight-bold"></label>
            <input asp-for="PayRate" class="form-control" required />
            <span asp-validation-for="PayRate" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="StartDate" class="control-label font-weight-bold"></label>
            <input asp-for="StartDate" class="form-control" required />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" formmethod="post" value="Save" class="btn btn-primary" />        
    </div>
</form>
<div class="mb-3">
    <a asp-action="Index">Back to List</a>
</div>
