@{
    ViewData["Title"] = "Additional Details";
}
@model ReportViewModel
<hr />
<form asp-action="AdditionalDetails">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="ControllerName" class="form-control" type="hidden" />
    <input asp-for="IsIncoming" class="form-control" type="hidden" />
    @if (Model.ControllerName == "Vehicle")
    {
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" required />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    }
    <div class="form-group">
        <label class="control-label">Month</label>
        <select asp-for="Months" asp-items="Html.GetEnumSelectList<Months>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" formmethod="post" value="Generate Report" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Dashboard</a>
</div>
