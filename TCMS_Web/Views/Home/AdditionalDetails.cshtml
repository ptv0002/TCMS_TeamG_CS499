@{
    ViewData["Title"] = "Additional Details";
}
@model ReportViewModel
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="ControllerName" class="form-control" type="hidden" />
    <input asp-for="IsIndividual" class="form-control" type="hidden" />
    @if (Model.IsIndividual == true)
    {
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" required />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    }
    <div class="form-group">
        <label asp-for="Month" class="control-label"></label>
        <input asp-for="Month" class="form-control" required />
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" formmethod="post" value="Generate Report" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Dashboard</a>
</div>
