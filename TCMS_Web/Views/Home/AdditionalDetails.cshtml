@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ReportViewModel
<hr />
<form asp-action="AdditionalDetails">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="ControllerName" class="form-control" type="hidden" />
    <input asp-for="IsIncoming_Individual" class="form-control" type="hidden" />
    @if (Model.ControllerName == "Maintenance" && Model.IsIncoming_Individual == true)
    {
        <div class="form-group">
            <label class="control-label">Vehicle ID</label>
            <select asp-for="Id" class="form-control" asp-items="ViewBag.VehicleId" ></select>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    }
<div class="form-group row">
    <div class="col-sm-6 mb-3 mb-sm-0">
        <label class="control-label">Month</label>
        <select asp-for="Months.SelectedValue" class="mr-1" asp-items="ViewBag.MonthModel"></select>
    </div>
    <div class="col-sm-6">
        <label class="control-label">Year</label>
        <select asp-for="Years.SelectedValue" class="mr-1" asp-items="ViewBag.YearModel"></select>
    </div>
</div>
    <div class="form-group">
        <input type="submit" formmethod="post" value="Generate Report" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Dashboard</a>
</div>
