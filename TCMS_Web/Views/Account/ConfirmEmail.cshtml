@{
    ViewData["Title"] = "Email Confirmation";
    Layout = "~/Views/Shared/_ShareLogin.cshtml";
}
<div class="col-lg-6 d-none d-lg-block bg-register-image"></div>
<div class="col-lg-6">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-2">@ViewData["Title"]</h1>
            <p class="mb-4">
                Thank you for confirming your email. Please click
                <a asp-action="Login" asp-controller="Account">here to login</a>
            </p>
        </div>
    </div>
</div>