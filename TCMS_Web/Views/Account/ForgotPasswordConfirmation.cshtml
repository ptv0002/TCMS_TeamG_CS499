    Layout = "~/Views/Shared/_ShareLogin.cshtml";
}
<div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
<div class="col-lg-6">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-2">Forgot Password Confirmation</h1>
