@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_ShareLogin.cshtml";
}
@model AccountViewModel
<div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
<div class="col-lg-6">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
            <p class="mb-4">
                We get it, stuff happens. Just enter your email address below
                and we'll send you a link to reset your password!
            </p>
        </div>
        <form class="user">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="email" class="form-control form-control-user"
                       asp-for="UsernameOrEmail" placeholder="Enter Email Address">
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <button type="submit" formmethod="post" class="btn btn-primary btn-user btn-block">
                Reset Password
            </button>
        </form>
        <hr>
        <div class="text-center">
            <a class="small" asp-action="Register" asp-controller="Account">Create an Account!</a>
        </div>
        <div class="text-center">
            <a class="small" asp-action="Login" asp-controller="Account">Already have an account? Login!</a>
        </div>
    </div>
</div>
